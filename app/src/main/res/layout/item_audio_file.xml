<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="song name"
            android:layout_weight="4"
            android:textSize="@dimen/text_size_tertiary"
            android:textAlignment="viewStart"
            android:id="@+id/textview_row_item_song"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="0:00"
            android:layout_weight="1"
            android:textSize="@dimen/text_size_quaternary"
            android:textAlignment="viewEnd"
            android:id="@+id/textview_row_item_time"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="artist"
        android:textSize="@dimen/text_size_quaternary"
        android:textAlignment="viewStart"
        android:id="@+id/textview_row_item_artist"
        android:textColor="@color/light_gray"
        android:paddingStart="@dimen/padding_subdirectory"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Path"
        android:textSize="@dimen/text_size_quaternary"
        android:id="@+id/textview_row_item_path"
        android:textColor="@color/light_gray"
        android:paddingStart="@dimen/padding_subdirectory"
        />
</LinearLayout>